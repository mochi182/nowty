<form id="addForm" class="form-style">

    <center>
        <h5>
            Nueva actividad
        </h5>
    </center>

    <div class="form-group">
        <label for="actividad-input">Nombre de la actividad:</label>
        <input class="form-control" type="text" id="actividad-input" name="actividad-input" required>
    </div>

    <div class="form-group">
        <input class="form-check-input" type="checkbox" value="1" name="es-nota" id="es-nota">
        <label class="form-check-label" for="flexCheckDefault">
            ¿Es nota?
        </label>
    </div>

    <div id="opcionesAvanzadas">

        <div class="form-group">
            <label for="dropdown-select">Tipo:</label>
            <select id="dropdown-select" class="form-control" name="dropdown-select">
                <option value="1" selected>Puntual</option>
                <option value="2">Rutina</option>
                <option value="3">Rango</option>
            </select>
        </div>

        <div class="form-group">
            <label for="descripcion-textarea">Descripción:</label>
            <textarea id="descripcion-textarea" class="form-control" name="descripcion-textarea" rows="4"></textarea>
        </div>

        <div class="form-group">
            <label for="imagen-input">Imagen:</label>
            <input readonly type="text" class="form-control" id="imagen-input" class="form-control" name="imagen-input">
            <button id="select-file-btn" class="btn btn-outline-secondary mt-2 mb-2">Seleccionar archivo</button>
        </div>

        <div class="form-group">
            <fieldset id="horas-input">
                <legend>Horas:</legend>
                <div class="checkbox-group">
                    <% for (var i=1; i <=24; i++) { %>
                        <div class="checkbox-unit">
                            <label class="checkbox-container">
                                <input type="checkbox" class="horas" name="horas-input" value="<%= i %>" <%=i>= 8 && i
                                <= 16 ? "checked" : "" %> />
                            </label>
                            <small class="hora-num">
                                <%= i %>
                            </small>
                        </div>
                        <% } %>
                </div>
                <button id="check-all-horas-button" class="btn btn-outline-secondary mt-2 mb-2">✔️ Todos</button>
                <button id="uncheck-all-horas-button" class="btn btn-outline-danger mt-2 mb-2">⬜ Ninguno</button>
            </fieldset>
        </div>

        <br>

        <div class="date-config form-group">
            <label for="date-dropdown">Configuración:</label>
            <select id="date-dropdown" class="form-control" name="date-dropdown">
                <option value="por-fecha" selected>Por fecha</option>
                <option value="por-semana">Por semana</option>
            </select>
        </div>

        <div id="porSemanaInputs">
            <div class="form-group">
                <fieldset id="dias-input">
                    <legend>Dias:</legend>
                    <div class="checkbox-group">
                        <% for (var i=1; i <=7; i++) { %>
                            <div class="checkbox-unit">
                                <label class="checkbox-container">
                                    <input type="checkbox" class="dias" name="dias-input" value="<%= i %>" />
                                </label>
                                <small class="dia-num time weekday">
                                    <%= i %>
                                </small>
                            </div>
                            <% } %>
                    </div>
                    <button id="check-all-dias-button" class="btn btn-outline-secondary mt-2 mb-2">✔️ Todos</button>
                    <button id="uncheck-all-dias-button" class="btn btn-outline-danger mt-2 mb-2">⬜ Ninguno</button>
                </fieldset>
            </div>
        </div>

        <div id="porFechaInputs" style="display:none;">
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <label for="dia">Día (1-<span id="max-day-of-month"></span>): </label>
                        <input type="number" id="dia" class="form-control" name="dia" min="1" max="31" required>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label for="mes">Mes: </label>
                        <select id="mes" class="form-control" name="mes" required>
                            <option value=""></option>
                            <option value="1">Enero</option>
                            <option value="2">Febrero</option>
                            <option value="3">Marzo</option>
                            <option value="4">Abril</option>
                            <option value="5">Mayo</option>
                            <option value="6">Junio</option>
                            <option value="7">Julio</option>
                            <option value="8">Agosto</option>
                            <option value="9">Septiembre</option>
                            <option value="10">Octubre</option>
                            <option value="11">Noviembre</option>
                            <option value="12">Diciembre</option>
                        </select>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label for="anho">Año (<span id="anho-actual"></span>-2100): </label>
                        <input type="number" id="anho" class="form-control" name="anho" min="2023" max="2100" required>
                    </div>
                </div>
            </div>
        </div>

    </div>
</form>

<center>
    <button class="btn btn-primary" id="addButton">
        Add
    </button>

    <button class="btn btn-danger" id="clearButton">
        Clear
    </button>

</center>

<script src="js/advancedForm.js"></script>